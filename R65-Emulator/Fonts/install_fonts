# install_fonts - install DSEG fonts
# 
# run as superuser, e.g. sudo ./install_fonts

if [ ! -e /usr/share/fonts/truetype/DSEG7 ]; then
  mkdir /usr/share/fonts/truetype/DSEG7
  cp DSEG7/DSEG7*.ttf /usr/share/fonts/truetype/DSEG7
fi

if [ ! -e /usr/share/fonts/truetype/LedPanel ]; then
  mkdir /usr/share/fonts/truetype/LedPanel
  cp LedPanel/LedPanel.ttf /usr/share/fonts/truetype/LedPanel
fi

if [ ! -e /usr/share/fonts/truetype/basis33 ]; then
  mkdir /usr/share/fonts/truetype/basis33
  cp basis33/basis33.ttf /usr/share/fonts/truetype/basis33
fi


fc-cache /usr/share/fonts

fc-list "DSEG7 Classic"
fc-list "Led Panel Station On"
fc-list "basis33"